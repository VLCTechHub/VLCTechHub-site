{% extends "./default.njk" %}
{% from "./macros/event.njk" import image, longDate, time, googleCalendarLink %}

{% block main %}
  <article id="event-page">
    <header><h1>{{title}}</h1></header>
    <section class="event-details">
      {{ image(twitter) }}
      <section class="details">
      <p>{{longDate(startDate)}}</p>
      <p>{{time(startDate)}}</p>
      </section>
      <section class="actions">
      <a href="{{link}}" class="button button-primary">Ver fuente</a>
      <a href="{{googleCalendarLink(title, link, startDate)}}" class="button button-secondary">AÃ±adir al calendario</a>
      </section>
    </section>
    <section class="ruler">
      <hr>
    </section>
    <section class="event-description">
      {{contents | safe}}
    </section>
  </article>
{% endblock %}
