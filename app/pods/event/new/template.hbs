{{#if saveFailed}}
 <div class="alert -danger">
  <div class='h3'>¡Ups! Houston, tenemos un problema</div>
  <div>No hemos podido crear el evento, por favor, revisa que los datos son correctos</div>
</div>
{{/if}}

{{#if saved }}
<div class="alert -confirm">
  <div class="h3">¡Yuju! ¡Evento dado de alta!</div>
  <div>Hemos dado de alta tu evento, pero ten en cuenta que la publicación no es inmediata.</div>
</div>
{{/if}}

