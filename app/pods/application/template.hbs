<div class="flex flex-column" style="min-height:100vh">
  <div class="menu relative md-hide">
    <div class="clearfix">
      <img src="img/title.png" alt="VLCTechhub" title="VLCTechhub" class="px2" style="height:64px"/>
      <a class="right bg-white p2" href='#' style="width:32px" {{action "toggleMobileMenu"}}>
        <img src="img/icon-menu.png"/>
      </a>
    </div>
  </div>
  {{#if mobileMenuExpanded}}
  <div class="absolute z1 col-12 b-shadow md-hide">
    <nav>
      <ul class="list-reset mb0">
        <li class="bg-white p2 center border">{{#link-to 'event.upcoming' classNames='black'}} Próximos {{/link-to}}</li>
        <li class="bg-white p2 center border">{{#link-to 'event.archive' classNames='black'}} Archivo {{/link-to}}</li>
        <li class="bg-white p2 center border">{{#link-to 'event.new' classNames='black'}} Añadir evento {{/link-to}}</li>
        <li class="bg-white p2 center border">{{#link-to 'job.list' classNames='black'}} Empleo <span class="h6 px1 rounded white bg-red">{{ totalJobs }}</span> {{/link-to}}</li>
      </ul>
    </nav>
    </div>
  {{/if}}

  <div class="menu md-show">
    <div class="container clearfix">
      <div class="col col-2 mt1">
        {{#link-to 'index' classNames=''}}
          <img src="img/title.png" alt="VLCTechhub" title="VLCTechhub" class="logo py1 mr2"/>
        {{/link-to}}
      </div>
      <div class="sm-col sm-col-4 mt3">
        {{#link-to 'event.upcoming' classNames='btn btn-menu ml1'}} Próximos {{/link-to}}
        {{#link-to 'event.archive' classNames='btn btn-menu'}} Archivo {{/link-to}}
        {{#link-to 'job.list' classNames='btn btn-menu'}} Empleo <span class="h6 px1 rounded white bg-red"> {{ totalJobs }} </span> {{/link-to}}
      </div>
      <div class="sm-col sm-col-6 mt3 md-show">
        <div class='right'>
          {{#link-to 'event.new' classNames='btn btn-menu'}} Añadir evento {{/link-to}}
        </div>
      </div>
    </div>
  </div>

  <div class="main flex-auto mb4">
    <div class="container px2 sm-px3">
      {{outlet}}
    </div>
  </div>

  <div class="py2 bg-navy">
    <div class="container-md px2 py2">
      <div class="clearfix">

      <div class="sm-col sm-col-3">
        <ul class="list-reset">
          <li class="mb1 silver caps h5">Ver</li>
          <li>
            {{#link-to 'event.upcoming' classNames='silver'}} Próximos eventos {{/link-to}}
          </li>
          <li>
            {{#link-to 'job.list' classNames='silver'}} Ofertas de trabajo {{/link-to}}
          </li>
        </ul>
      </div>

      <div class="sm-col sm-col-3">
        <ul class="list-reset">
          <li class="mb1 silver caps h5">Publicar</li>
          <li>
            {{#link-to 'event.new' classNames='silver'}} Evento {{/link-to}}
          </li>
          <li>
            <a href="https://vlctechhub.typeform.com/to/iYKS7g" class="silver">Oferta de trabajo</a>
          </li>
          <li>
            <a href="https://chrome.google.com/webstore/detail/vlctechhub-publisher-addo/jmphppchcbgfglglfbemgbjligclmcmc" class="silver">Chrome extension</a>
          </li>
        </ul>

      </div>

      <div class="sm-col sm-col-3">
        <ul class="list-reset">
          <li class="mb1 silver caps h5">Social</li>
          <li>
            <a href="https://twitter.com/VLCTechHub" class="silver">Twitter</a>
          </li>
          <li>
            <a href="https://groups.google.com/forum/?hl=es#!forum/vlctechhub" class="silver">Google group</a>
          </li>
          <li>
            <a href="https://valencia-devs.herokuapp.com/" class="silver">Slack</a>
          </li>
        </ul>
      </div>

      <div class="sm-col sm-col-3">
        <ul class="list-reset">
          <li class="mb1 silver caps h5">Contacto</li>
          <li>
            <a href="https://github.com/VLCTechHub/" class="silver">Github</a>
          </li>
          <li>
            <a href="mailto:vlctechhub@gmail.com" class="silver">Mail</a>
          </li>
      </ul>
      </div>
      </div>
    </div>
  </div>
</div>
