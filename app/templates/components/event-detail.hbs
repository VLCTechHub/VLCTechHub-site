<div class="event">
  <div class="title"><a href={{event.link}} target="_blank" title="">{{event.title}}</a></div>
  <div class="date">
    {{ moment-format event.date 'LL' }} - {{ moment-from-now event.date }}
  </div>
  <div class="summary">
    <p>{{event.description}}</p>
    <div class="more">
      <a class="muted" href={{event.link}} target="_blank"><img alt="Visitar fuente" src="img/arrow-24.png"/></a>
    </div>
  </div>
</div>
